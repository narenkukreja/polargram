<div class="posts-wrapper row">
    <div class="post">
        <div class="post-head">
            <div class="name">
                Naren Kukreja
            </div>
        </div>
        <div class="image center-block">
            <%= image_tag @post.image.url(:medium) %>
        </div>
        <p class="caption">
            <%= @post.caption %>
        </p>
    </div>
</div>

<div class="text-center">
    <%= link_to "Back", posts_path %> |
    <%= link_to "Edit Post", edit_post_path(@post) %>
</div>

